<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="2link_robot">

    <xacro:arg name="is_sim" default="true"/>
    <xacro:arg name="is_ignition" default="true"/>

    <xacro:include filename="$(find daadbot_desc)/urdf/2_link_urdf/2link_gazebo.xacro"/>
    <xacro:include filename="$(find daadbot_desc)/urdf/2_link_urdf/2link_ros2_control.xacro"/>

    <material name="black">
        <color rgba="0 0 0 0.7"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 0.7"/>
    </material>

    <link name="world"/>
    
    <joint name="base_joint" type="fixed">
        <parent link="world"/>
        <child link="base"/>
        <origin xyz="0 0 0" rpy="0 0 0"/> 
    </joint>

    <link name="base">
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <link name="arm1">
        <visual>
            <geometry>
                <box size="1 .05 .05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.5 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="1 .05 .05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.5 0 0"/>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0.5 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.08" iyz="0" izz="0.08"/>
        </inertial>
    </link>

    <joint name="baseHinge" type="continuous">
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <parent link="base"/>
        <child link="arm1"/>
    </joint>

    <link name="arm2">
        <visual>
            <geometry>
                <box size="1 .05 .05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.5 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="1 .05 .05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.5 0 0"/>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0.5 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.08" iyz="0" izz="0.08"/>
        </inertial>
    </link>

    <joint name="interArm" type="continuous">
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <parent link="arm1"/>
        <child link="arm2"/>
        <origin rpy="0 0 0" xyz="1 0 0"/>
    </joint>

    <link name="endEffector">
        <inertial>
            <mass value="0.01"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
    </link>

    <joint name="ee_joint" type="fixed">
        <parent link="arm2"/>
        <child link="endEffector"/>
        <origin rpy="0 0 0" xyz="1 0 0"/>
    </joint>

</robot>